FoamFile
{
    version     4.0;
    format      ascii;
    class       volScalarField;
    object      I;
}

dimensions      [1 0 -3 0 0 0 0];

internalField    uniform 0;

boundaryField
{
    incident
    {
        type    irradianceSource;   // or lamp
        // direction in to the domain
        totalIrradiance     40;
        nBands      5; // throw error if not same as properties
        {
            bandFrac    (0.1 0.2 0.3 0.3 0.3);  // throw error if sum(bandFrac) != 1.
        }
    }
}
